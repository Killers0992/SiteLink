<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\SiteLink.API\SiteLink.API.csproj" />
		<ProjectReference Include="..\Portals\Portals.csproj" />
		<Reference Include="Assembly-CSharp">
			<HintPath>$(SL_REFERENCES)\Assembly-CSharp.dll</HintPath>
		</Reference>
		<Reference Include="UnityEngine.CoreModule">
			<HintPath>$(UNITY_REFERENCES)\UnityEngine.CoreModule.dll</HintPath>
		</Reference>
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Copy SourceFiles="$(TargetDir)$(TargetName).dll" DestinationFolder="D:\VS Projects\SiteLink\SiteLink\bin\Debug\net9.0\Plugins" />
	</Target>

</Project>
